</section>

<section id="gameSection" style="display:none">
    <div id="gameIdInfo">
        <h3></h3>
    </div>
    <div id="pseudos"></div>
    <div id="startGame">
        <button id="startGameButton" class="btn-outline-primary">Commencer la partie !</button>
    </div>
    <div id="startGameWait">
        <p><b>En attente du lancement de la partie par le joueur l'ayant créée</b></p>
    </div>

    <br />
    <div id="centerCard">
        <p>Pile centrale</p>
        <div id="centerCardPicture">
        </div>
    </div>
    <br />
    <div id="playerCard">
        <p>Votre pile</p>
        <div id="playerCardPicture">
        </div>
    </div>
    <div id="cardsNumber"></div>
</section>