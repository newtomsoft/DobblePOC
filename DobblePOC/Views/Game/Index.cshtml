@{
    Layout = "_LayoutGame.cshtml";
    ViewData["Title"] = "Jouer";
}

<section id="createJoinGameSection" style="display:none">
    <h3>Créer une partie</h3>
    <form id="createGameForm" action="javascript:void(0);">
        <div class="form-group">
            <label class="control-label">Votre pseudo</label>
            <input id="pseudoCreateGame" name="pseudoCreateGame" class="form-control" type="text" value="" required />
        </div>
        <div class="form-group">
            <label class="control-label">Nombre d'images par carte</label>
            <input id="picturesNumber" name="picturesNumber" class="form-control" type="number" value="8" required />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Créer la partie" />
        </div>
    </form>
    <h3>Rejoindre une partie</h3>
    <form id="joinGameForm" action="javascript:void(0);">
        <div class="form-group">
            <label class="control-label">Votre pseudo</label>
            <input id="pseudoJoinGame" class="form-control" type="text" value="" required />
        </div>
        <div class="form-group">
            <label class="control-label">Identifiant de la partie</label>
            <input id="gameIdJoinGame" class="form-control" type="text" value="" required />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Rejoindre la partie" />
        </div>
    </form>
    @* todo : appareil additionel à ajouter en dernier tel que codé *@
